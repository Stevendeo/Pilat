ifndef FRAMAC_SHARE
  FRAMAC_SHARE 	:= $(shell frama-c-config -print-share-path)
endif

ifeq ("$(PLUGIN_DIR)","")
PLUGIN_DIR 	:= ./src/
else
PLUGIN_DIR      := $(PLUGIN_DIR)/src
endif

PLUGIN_NAME	:= Pilat

PLUGIN_CMI 	:= pilat_math

PLUGIN_CMO 	:= mat_option\
		float\
		qring\
		poly\
		poly_utils\
		pilat_visitors\
		lacaml_matrix\
		pilat_matrix\
		poly_assign\
		assign\
		invariant_utils\
		cil2assign\
		invar_prover\
		non_det_invar\
		acsl_gen\
		main

PLUGIN_REQUIRES         := zarith lacaml

PLUGIN_TESTS_DIRS 	:= ../../tests/pilat
PLUGIN_DISTRIBUTED	:=yes

include $(FRAMAC_SHARE)/Makefile.dynamic

init:
	opam switch create . 4.10.0 --no-install
	eval $(opam env)
	opam install . --deps-only
